{
  "name": "electron-license-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc && electron-builder -w",
    "electron": "tsc && electron .",
    "rebuild": "electron-rebuild -f -w ffi-napi"
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "electron-store": "^8.2.0",
    "keytar": "^7.9.0",
    "koffi": "^2.14.0",
    "node-fetch": "^3.3.2",
    "ref-napi": "^3.0.3",
    "systeminformation": "^5.27.7",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/ffi-napi": "^4.0.10",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.yourcompany.licenseclient",
    "productName": "LicenseClient",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "src/**",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      {
        "from": "native/",
        "to": "native",
        "filter": [
          "hwid_guard.dll"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
